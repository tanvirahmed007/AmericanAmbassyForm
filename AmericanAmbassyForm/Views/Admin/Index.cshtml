@using Microsoft.AspNetCore.Identity
@using AmericanAmbassyForm.Areas.Identity.Data


@inject SignInManager<AmericanAmbassyFormUser> SignInManager
@inject UserManager<AmericanAmbassyFormUser> UserManager



@{
    ViewData["Title"] = "Admin Panel";
    string[] TableHeaders = new string[]
    {
                "Id",
                "Name",
                "Age",
                "DOB",
                "Email",
                "Phone",
                "Surname"

    };
  
}


@if (SignInManager.IsSignedIn(User))
{
    <h1>hello, @UserManager.GetUserName(User)</h1>
    }

@if (SignInManager.IsSignedIn(User))
{
    <h4><a href="~/Admin/RegisteredUsers">See Registered Users.</a></h4>
    
    <h1>Display Data</h1>
    <br />
    <br />
    <table class="DataTable">
        <thead>
            <tr>
                @{
                    foreach (var head in TableHeaders)
                    {
                        <th>
                            @head
                        </th>

                    }
                }
            </tr>
        </thead>
        <tbody>
            @{
                if (Model != null)
                {
                    foreach (var Data in Model)
                    {
                        <tr>
                            <th>@Data.Id</th>
                            <th>@Data.Name</th>
                            <th>@Data.Age</th>
                            <th>@Data.DOB</th>
                            <th>@Data.Email</th>
                            <th>@Data.Phone</th>
                            <th>@Data.Surname</th>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
    }


